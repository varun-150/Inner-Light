{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    },
    {
      "src": "/index.html",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "FAST2SMS_API_KEY": "@fast2sms_api_key"
  }
}
